doctype html
html
  head
    meta(charset="utf-8")
    title data-tip.css
    link(rel="stylesheet" href="./dist/data-tip.css?time=#{time}")
    style.
      body {
        margin: 0;
        font: 16px/1.7 Helvetica;
        padding-bottom: 100px;
      }
      a {
        color: #4078c0;
        text-decoration: none;
      }
      .main {
        max-width: 500px;
        margin: 0 auto;
        margin-top: 100px;
      }
      .sec {
        margin-bottom: 40px;
      }
      h1 {
        margin: 0;
      }
      h2 {
        margin: 0 0 40px 0;
        font-size: 12px;
        border-bottom: 1px solid #e2e2e2;
        padding-bottom: 10px;
      }
      .underline {
        text-decoration: underline;
      }
      button.data-tip {
        border: 1px solid #04be02;
        color: #04be02;
        padding: 10px 14px;
        display: block;
        border-radius: 3px;
        font-size: 18px;
        cursor: pointer;
        background-color: #fff;
        width: 100%;
      }
      p > span {
        background-color: #04be02;
        color: white;
      }
      p.sep {
        border-bottom: 1px solid #e2e2e2;
        padding: 5px 0;
        font-weight: bold;
        font-size: 18px;
      }
      button.data-tip-danger {
        background-color: #b34e4d;
        border-color: #b34e4d;
        color: #fff;
      }
      button.data-tip-warning{
        background-color: #c09854;
        border-color: #c09854;
        color: #fff;
      }
      button.data-tip-info {
        background-color: #3986ac;
        border-color: #3986ac;
        color: #fff;
      }
      button.data-tip-success {
        background-color: #458746;
        border-color: #458746;
        color: #fff;
      }
  body
